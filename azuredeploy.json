{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "defaultValue": "rayven"
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage account name"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS"
    }
  },
  "variables": {
    "lockLevel": "None",
    "description": "Sample Managed application definition",
    "displayName": "Sample Managed application definition",
    "managedApplicationDefinitionName": "[concat(parameters('name'), '_ApplicationDefinition')]",
    "packageFileUri": "[uri(deployment().properties.templateLink.uri, 'rayven-test.zip')]",
    "managedResourceGroupId": "[concat(subscription().id,'/resourceGroups/', concat(parameters('name'),'_managed'))]",
    "applicationDefinitionResourceId": "[resourceId('Microsoft.Solutions/applicationDefinitions',variables('managedApplicationDefinitionName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Solutions/applicationDefinitions",
      "apiVersion": "2019-07-01",
      "name": "[variables('managedApplicationDefinitionName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "lockLevel": "[variables('lockLevel')]",
        "description": "[variables('description')]",
        "displayName": "[variables('displayName')]",
        "packageFileUri": "[variables('packageFileUri')]"
      }
    },
    {
      "type": "Microsoft.Solutions/applications",
      "apiVersion": "2019-07-01",
      "name": "[parameters('name')]",
      "location": "[resourceGroup().location]",
      "kind": "ServiceCatalog",
      "dependsOn": [
        "[resourceId('Microsoft.Solutions/applicationDefinitions/',variables('managedApplicationDefinitionName'))]"
      ],
      "properties": {
        "managedResourceGroupId": "[variables('managedResourceGroupId')]",
        "applicationDefinitionId": "[variables('applicationDefinitionResourceId')]",
        "parameters": {
          "location": {
            "value": "[resourceGroup().location]"
          },
          "storageAccountName": {
            "value": "[parameters('storageAccountName')]"
          },
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          }
        }
      }
  ],
  "outputs": {
    "resourceName": {
      "type": "string",
      "value": "[parameters('name')]"
    },
    "packageFileUri": {
      "type": "string",
      "value": "[variables('packageFileUri')]"
    }
  }
}