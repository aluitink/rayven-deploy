{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "instanceName": {
      "defaultValue": "rayven",
      "type": "string"
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "Rayven"
    },
    "webSku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [ "Free", "Paid" ]
    },
    "databaseSku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [ "Free", "Pay as you go" ]
    },
    "customDomain": {
      "defaultValue": "domain.tdl",
      "type": "string"
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GRS",
        "Standard_GZRS",
        "Standard_LRS",
        "Standard_RAGRS",
        "Standard_RAGZRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    }
  },
  "variables": {
    "databaseIsFreeTier": "[equals(parameters('databaseSku'), 'Free')]",
    "storageAccountName": "[format('rayven{0}', uniqueString(resourceGroup().id))]",
    "customDomainName": "[concat(parameters('instanceName'), '/', parameters('customDomain'))]",
    "customUrl": "[concat('https://', variables('customDomainName'))]",
    "storageDomainName": "[concat('z', variables('customDomainName'))]",
    "storageUrl": "[concat('https://', 's.', variables('customDomainName'))]"
  },
  "resources": [
    {
      "name": "Database",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/databaseAccount.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "databaseName": {
            "value": "[parameters('databaseName')]"
          },
          "databaseSku": {
            "value": "[parameters('databaseSku')]"
          }
        }
      }      
    },
    {
      "name": "Storage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/storageAccount.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          }
        }
      }
    },
    {
      "name": "WebApp",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/staticWebApp.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "webSku": {
            "value": "[parameters('webSku')]"
          },
          "databaseAccountName": {
            "value": "[reference('Database').outputs.databaseAccountName.value]"
          },
          "databaseConnectionString": {
            "value": "[reference('Database').outputs.databaseConnectionString.value]"
          },
          "databaseName": {
            "value": "[parameters('databaseName')]"
          },
          "storageAccountName": {
            "value": "[reference('Storage').outputs.storageAccountName.value]"
          },
          "storageConnectionString": {
            "value": "[reference('Storage').outputs.storageConnectionString.value]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Storage')]",
        "[resourceId('Microsoft.Resources/deployments', 'Database')]"
      ]
    }

  ],
  "outputs": {
    "deploymentObject": {
      "type": "object",
      "value": "[deployment()]"
    }
  }
}