{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "instanceName": {
      "defaultValue": "rayven",
      "type": "string"
    },
    "deployApiUrl": {
      "type": "string",
      "defaultValue": "https://deploy.rayven.mx"
    },
    "databaseName": {
      "type": "string",
      "defaultValue": "Rayven"
    },
    "webSku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [ "Free", "Paid" ]
    },
    "databaseSku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [ "Free", "Serverless", "Provisioned" ],
      "metadata": {
        "description": "With Azure Cosmos DB free tier, you will get the first 1000 RU/s and 25 GB of storage for free in an account. You can enable free tier on up to one account per subscription. Estimated $64/month discount per account."
      }
    },
    "databaseThroughputLimit": {
      "type": "int",
      "minValue": 400,
      "defaultValue": 1000
    },
    "customDomain": {
      "defaultValue": "domain.tdl",
      "type": "string"
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GRS",
        "Standard_GZRS",
        "Standard_LRS",
        "Standard_RAGRS",
        "Standard_RAGZRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/tags",
      "name": "default",
      "apiVersion": "2021-04-01",
      "properties": {
        "tags": {
          "rayven": "1.0"
        }
      }
    },
    {
      "name": "Database",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/databaseAccount.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "databaseName": {
            "value": "[parameters('databaseName')]"
          },
          "databaseSku": {
            "value": "[parameters('databaseSku')]"
          },
          "databaseThroughputLimit": {
            "value": "[parameters('databaseThroughputLimit')]"
          }
        }
      }
    },
    {
      "name": "Storage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/storageAccount.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          }
        }
      }
    },
    {
      "name": "WebApp",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/staticWebApp.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "webSku": {
            "value": "[parameters('webSku')]"
          },
          "databaseAccountName": {
            "value": "[reference('Database').outputs.databaseAccountName.value]"
          },
          "databaseConnectionString": {
            "value": "[reference('Database').outputs.databaseConnectionString.value]"
          },
          "databaseName": {
            "value": "[parameters('databaseName')]"
          },
          "storageAccountName": {
            "value": "[reference('Storage').outputs.storageAccountName.value]"
          },
          "storageConnectionString": {
            "value": "[reference('Storage').outputs.storageConnectionString.value]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Storage')]",
        "[resourceId('Microsoft.Resources/deployments', 'Database')]"
      ]
    },
    {
      "name": "ApplicationDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/infra/deploymentScript.json"
        },
        "parameters": {
          "apiUrl": {
            "value": "[parameters('deployApiUrl')]"
          },
          "deploymentToken": {
            "value": "[reference('WebApp').outputs.deploymentToken.value]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'WebApp')]"
      ]
    }
  ],
  "outputs": {
    "deploymentObject": {
      "type": "object",
      "value": "[deployment()]"
    }
  }
}