{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"deploymentToken": {
			"type": "securestring"
		},
		"apiUrl": {
			"type": "string"
		},
		"pollingInterval": {
			"type": "int",
			"defaultValue": 10
		}
	},
	"resources": [
		{
			"type": "Microsoft.Resources/deploymentScripts",
			"apiVersion": "2020-10-01",
			"location": "[resourceGroup().location]",
			"name": "runDeploymentPipeline",
			"kind": "AzurePowerShell",
			"properties": {
				"azPowerShellVersion": "8.3",
				"primaryScriptUri": "https://raw.githubusercontent.com/aluitink/rayven-deploy/main/scripts/RayvenDeployHook.ps1",
				"arguments": "[concat(' -deploymentToken ', parameters('deploymentToken'), ' -apiUrl ', parameters('apiUrl'),' -pollingInterval ', parameters('pollingInterval'))]",
				"timeout": "PT1H",
				"cleanupPreference": "OnSuccess",
				"retentionInterval": "P1D"
			}
		}
	],
	"outputs": {
		"deploymentConclusion": {
			"type": "String",
			"value": "[reference('runDeploymentPipeline').outputs.conclusion]"
		}
	}
}
